{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../../dist/server",
    "rootDir": ".."
  },
  "include": ["./**/*.ts", "../common/**/*.ts"],
  "exclude": ["node_modules"]
}
